require dirname( __DIR__ ) . '/src/bootstrap.php';

use Rave\Utility\Compiler;

error_reporting( -1 );
ini_set( 'display_errors', 1 );

try 
{
    $_compiler = new Compiler();
    $_compiler->compile();
}
catch ( \Exception $_ex)
{
	echo 'Failed to compile phar: [' . get_class( $_ex) . '] ' . $_ex->getMessage()  .' at ' . $_ex->getFile() . ':' . $_ex->getLine();
    exit( 1 );
}
